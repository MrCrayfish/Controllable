{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${mod_version}",
    "name": "${mod_name}",
    "description": "${mod_desc}",
    "authors": [ "${mod_author}" ],
    "contact": {
        "homepage": "${mod_homepage}",
        "sources": "${mod_source}",
        "issues": "${mod_issues}"
    },
    "license": "${mod_license}",
    "icon": "${mod_id}_icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [
            "com.mrcrayfish.controllable.ControllableMod"
        ]
    },
    "mixins": [
        "controllable.common.mixins.json",
        "controllable.mixins.json"
    ],
    "accessWidener": "controllable.accesswidener",
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=17",
        "framework": ">=${framework_version}"
    },
    "custom": {
        "framework": {
            "configs": [
                "com.mrcrayfish.controllable.Config"
            ]
        },
        "configured": {
            "configs": [],
            "background": "minecraft:textures/block/dirt.png"
        },
        "catalogue": {
            "banner": "${mod_id}_banner.png",
            "background": "${mod_id}_background.png"
        }
    }
}
  